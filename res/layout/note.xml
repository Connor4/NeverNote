<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Match"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="horizontal" >
    
    <RelativeLayout 
        style="@style/NoteItemLay"
        >
        <TextView 
        android:id="@+id/Note_Title"
        style="@style/MW"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium"
        android:text="this is title"
        />
        
        <TextView 
            android:id="@+id/Note_Date"
            style="@style/Warp"
            android:paddingLeft="5dp"
            android:layout_below="@id/Note_Title"
            android:textColor="@color/background_color"
            android:textSize="@dimen/text_size_micro"
            android:text="this is date"
            />
        
        <TextView 
            android:id="@+id/Note_Contration"
            style="@style/MW"
            android:layout_below="@id/Note_Date"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_micro"
            android:text="this is a looooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooog sentence"
            />
    </RelativeLayout>
    
    <ImageView
        android:id="@+id/Note_Image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/actionbar_icon" />

</LinearLayout>
