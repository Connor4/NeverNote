<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Match"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <RelativeLayout
        style="@style/NoteItem"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/Note_Title"
            style="@style/MW"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:text="this is title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/Note_Date"
            style="@style/Warp"
            android:layout_below="@id/Note_Title"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="this is date"
            android:textColor="@color/background_color"
            android:textSize="@dimen/text_size_micro" />

        <TextView
            android:id="@+id/Note_Contration"
            style="@style/MW"
            android:layout_below="@id/Note_Date"
            android:paddingLeft="5dp"
            android:text="this is a looooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooog sentence"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_micro" />
    </RelativeLayout>

</LinearLayout>